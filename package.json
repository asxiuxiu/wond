{
  "name": "wond",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "run-p dev:common dev:core dev:wond",
    "dev:common": "pnpm --filter @wond/common dev",
    "dev:core": "pnpm --filter @wond/core dev",
    "dev:wond": "pnpm --filter @wond/wond dev",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\""
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.15.4",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^22.14.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.5",
    "rollup": "^4.44.1",
    "tslib": "^2.8.1",
    "turbo": "^2.5.4",
    "typescript": "^5.2.2"
  }
}